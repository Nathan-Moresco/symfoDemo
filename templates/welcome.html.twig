        <span class="text-4xl font-bold text-light">{{ "Bienvenue"|trans }}</h1>
    </div>

    <div class="mb-4 grid w-full grid-cols-3 gap-6">
        {% for i in 1..3 %}
            <div class="relative h-32 w-full rounded-xl bg-primary p-4"></div>
        {% endfor %}
    </div>
    
    <div class="mb-4 grid w-full grid-cols-4 gap-6">
        {% for i in 1..8 %}
